extends layout

include partial/star

block content
  .row
   .col-md-9.page
     each book in books
       .row.booklist
         .col-md-2
          img(src='#{book.img}')
         .col-md-10
            p
             a(href="/Detail/#{book.id}")=book.title
            p=book.info
            p
             +outputStar(book.rating)

            p.tags
             each tag in book.tags
              span=tag
   .col-md-3
     .userinfo
       p xcode