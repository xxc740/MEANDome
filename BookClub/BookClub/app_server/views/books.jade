extends layout

block content
    .row
    .col-md-9.page
    each book in books
        .row.booklist
        .col-md-2
        img(src='#{book.img}')
        .col-md-10
        p
            a(href="/Detail/#{book.id}")=book.title
            p=book,info
        p
            - for(var i=1;i<=book.rating;i++)
                span.glyphicon.glyphicon-star
            - for(i=book.rating;i<5;i++)
                span.glyphicon.glyphicon-star-empty

        p.tag
            each tag in book.tags
                span=tag
    .col-md-3
    .userinfo
    p xcode